{
    "name": "small-site-template",
    "version": "2.0.0",
    "description": "A template for a small site using a simple PHP build process, TailwindCSS and AlpineJS",
    "main": "tailwind.config.js",
    "scripts": {
        "build:dev": "npx @tailwindcss/cli -i ./src/css/styles.css -o ./public/css/styles.css",
        "build:prod": "NODE_ENV=production npx @tailwindcss/cli -i ./src/css/styles.css -o ./public/css/styles.css"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/rosswintle/small-site-template.git"
    },
    "author": "Ross Wintle",
    "license": "MIT",
    "bugs": {
        "url": "https://github.com/rosswintle/small-site-template/issues"
    },
    "homepage": "https://github.com/rosswintle/small-site-template#readme",
    "devDependencies": {
        "@tailwindcss/forms": "^0.5.4",
        "@tailwindcss/typography": "^0.5.9",
        "tailwindcss": "^4.1.12"
    }
}
